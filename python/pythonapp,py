import kivy
from kivy.app import App
from kivy.uix.button import Button
from kivy.uix.label import Label
from kivy.uix.boxlayout import BoxLayout

class MyApp(App):
    def build(self):
        # Create a layout to hold the UI elements
        layout = BoxLayout(orientation='vertical')
        
        # Create a label
        label = Label(text='Press the buttons:')
        layout.add_widget(label)
        
        # Create a button and bind it to a function
        button1 = Button(text='Button 1')
        button1.bind(on_press=self.button1_pressed)
        layout.add_widget(button1)
        
        # Create another button and bind it to a different function
        button2 = Button(text='Button 2')
        button2.bind(on_press=self.button2_pressed)
        layout.add_widget(button2)
        
        return layout
    
    def button1_pressed(self, instance):
        print("Button 1 pressed!")
        # Add your desired functionality here
    
    def button2_pressed(self, instance):
        print("Button 2 pressed!")
        # Add your desired functionality here

if __name__ == '__main__':
    MyApp().run()
